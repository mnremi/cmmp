
// IMPORTATION DES DIFFÉRENTS MODULES UTILISÉS //

// Création de fenêtres
import javax.swing.JFrame;
// Création de conteneurs
import javax.swing.JPanel;
// Création de zones de texte
import javax.swing.JLabel;
// Création de boutons
import javax.swing.JButton;
// Positionnement relatif aux bordures
import java.awt.BorderLayout;
// Création graphique
import java.awt.Graphics;
// Personnalisation colorielle
import java.awt.Color;


void main(){
	
	// Création d'une fenêtre de 800x600, au titre "Cent Mille Milliards de Poèmes" //
	JFrame fenetre = new JFrame();
	fenetre.setVisible(true);
	fenetre.setSize(800, 600);
	fenetre.setTitle("Cent Mille Milliards de Poèmes");
	
	// Création d'un conteneur à l'arrière plan gris, qui sera intégré en haut de la fenêtre //
	JPanel panneau_top = new JPanel();
	panneau_top.setBackground(Color.GRAY);
	fenetre.add(panneau_top, BorderLayout.NORTH);
	panneau_top.setVisible(true);

	// Création d'une zone de texte dans le conteneur gris allouée à la description du concept //
	JLabel description = new JLabel("<html>LIGNE1<br>LIGNE2<br>LIGNE3</html>");
	panneau_top.add(description);

	// Création d'un conteneur à l'arrière plan blanc, qui sera intégré au milieu de la fenêtre //
	JPanel panneau_mid = new JPanel();
	panneau_mid.setBackground(Color.WHITE);
	fenetre.add(panneau_mid, BorderLayout.CENTER);
	panneau_mid.setVisible(true);

	// Création d'une zone de texte dans le conteneur blanc allouée au poème //
	JLabel poeme = new JLabel("<html>VERS1<br>VERS2<br>VERS3<br>VERS4<br>VERS5<br>VERS6<br>VERS7<br>VERS8<br>VERS9<br>VERS10<br>VERS11<br>VERS12<br>VERS13<br>VERS14</html>");
	panneau_mid.add(poeme);

	// Création d'un conteneur à l'arrière plan noir, qui sera intégré au bas de la fenêtre //
	JPanel panneau_bot = new JPanel();
	panneau_bot.setBackground(Color.BLACK);
	fenetre.add(panneau_bot, BorderLayout.SOUTH);
	panneau_bot.setVisible(true);

	// Création d'un bouton servant à générer le poème, à la bordure gauche du conteneur noir //
	JButton generer = new JButton("Générer");
	panneau_bot.add(generer, BorderLayout.WEST);
	
	// Création d'un bouton servant à quitter la fenêtre, à la bordure droite du conteneur noir //
	JButton quitter = new JButton("Quitter");
	panneau_bot.add(quitter, BorderLayout.EAST);
}

